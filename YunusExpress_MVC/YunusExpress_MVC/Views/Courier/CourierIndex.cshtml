@using YunusExpress_MVC.Models
@using YunusExpress_MVC.ViewModels

@model List<CourierSalaryViewModel>

@{
    ViewData["Title"] = "Sifariş Siyahısı";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f8;
        padding: 30px;
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .salary-table {
        width: 80%;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
        overflow: hidden;
    }

        .salary-table th {
            background-color: #4CAF50;
            color: white;
            padding: 12px 15px;
            text-align: left;
        }

        .salary-table td {
            padding: 12px 15px;
            border-bottom: 1px solid #ddd;
        }

        .salary-table tr:hover {
            background-color: #f1f1f1;
        }
</style>

<h2>Kuryerlərin Əmək Haqqı Hesabatı</h2>
<a style="margin-left:150px; margin-bottom:10px" asp-controller="Courier" asp-action="Index" class="btn btn-primary">Geri</a>

<table class="salary-table">
    <thead>
        <tr>
            <th>Kuryer</th>
            <th>Çatdırılan Sifarişlərin Məbləği (AZN)</th>
            <th>Əmək Haqqı (36%)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var courier in Model)
        {
            <tr>
                <td>@courier.CourierName</td>
                <td>@courier.TotalDeliveredAmount.ToString("0.00")</td>
                <td>@courier.Salary.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>
