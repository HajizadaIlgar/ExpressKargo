    <a asp-action="Create" asp-controller="ServiceType">Service Create</a><br />
    <a asp-action="Create" asp-controller="DeliveryZoneType">DeliveryZone Type Create</a><br />
    <a asp-action="Create" asp-controller="DeliveryZone">DeliveryZone Create</a><br />
    <a asp-action="Create" asp-controller="Order">Order Create</a><br />
    <a asp-action="Index" asp-controller="Order">Order List</a><br />

</div>
</html>