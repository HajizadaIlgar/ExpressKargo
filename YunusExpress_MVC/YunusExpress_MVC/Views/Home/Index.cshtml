@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}


<!DOCTYPE html>
<html lang="az">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YunisExpress</title>
    <link rel="stylesheet" href="~/assets/style/index.css">
    <link rel="stylesheet" href="~/assets/style/reset.css">
    <link href="~/assets/favicon.ico" rel="icon" />
</head>

<body>
    <div class="container">
        <div class="main-card">
            <div class="logo-container">

                <img src="~/assets/logo.png" alt="YunisExpress Logo" class="logo-image">
                <h1 class="brand-name">YunisExpress</h1>
            </div>

            <div class="option-card">
                <h3 class="card-title">Yeni Sifariş</h3>
                <a asp-action="Create" asp-controller="Order" class="btn-primary">Başla</a>
            </div>


            <div class="option-card">
                <h3 class="card-title">Tapmaq və Dəyişmək</h3>
                <a asp-action="Index" asp-controller="Order" class="btn-primary">Axtar</a>
            </div>


            <div class="option-card">
                <h3 class="card-title">Kuryerlərim</h3>
                <a asp-controller="Courier" asp-action="CourierHomePage" class="btn-primary">Keç</a>
            </div>
            <div class="option-card">
                <h3 class="card-title">Hesabatlar</h3>
                <a href="javascript:void(0);" onclick="checkPassword()" class="btn-primary">Keç</a>
            </div>

        </div>
    </div>
</body>

</html>

<script>
    function checkPassword() {
        const correctPassword = "admin123"; // 🔑 Change to your real password
        const input = prompt("Zəhmət olmasa şifrəni daxil edin:");

        if (input === correctPassword) {
            window.location.href = "/Home/Hesabatlar";
        } else if (input !== null) {
            alert("Şifrə yanlışdır. Giriş imtina edildi.");
        }
        // If input === null, user clicked Cancel
    }
</script>