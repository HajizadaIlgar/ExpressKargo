@using YunusExpress_MVC.Models
@model List<Order>

@{
    ViewData["Title"] = "Sifariş Siyahısı";
}

<h2 class="text-center">Sifariş Siyahısı</h2>
<style>
    table.table-bordered {
        border: 2px solid #000; /* Cədvəl kənarına qalın sərhəd */
    }
    table.table-bordered th,
    table.table-bordered td {
        border: 1px solid #000; /* Hüceyrələrin arasına da sərhəd */
    }
</style>

<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Sifariş No</th>
            <th>Faktura No</th>
            <th>Başlanğıc Tarixi</th>
            <th>Bitmə Tarixi</th>
            <th>Xidmət Tipi</th>
            <th>Kuryer</th>
            <th>Göndərən</th>
            <th>Göndərən unvani </th>
            <th>Qəbul edən</th>
            <th>Qəbul edəniin unvani </th>
            <th>Yekun</th>
            <th>Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            int i = 1;
            foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderNo</td>
                    <td>@order.InvoiceNo</td>
                    <td>@order.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.ServiceType?.ServiceType</td>
                    <td>@order.Courier?.CourierName</td>
                  
                    @if (order.ServiceType!.ServiceType!.Equals("Express"))
                    {
                        <td>@((order.OrderPrice - ((order.OrderPrice + order.SpecialPrice) * (order.Discount / 100))) + (order.OrderPrice - ((order.OrderPrice + order.SpecialPrice) * (order.Discount / 100))) * 18 / 100) ₼</td>
                    }else{
                    <td>@(((((order.OrderPrice)*18)/100)+order.OrderPrice)-((order.OrderPrice)*order.Discount)/100)  ₼</td>

                    }
                    <td>
                        <a asp-controller="Order" asp-action="Update" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Düzəliş</a>
                        <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
                i++;
            }
        }
        else
        {
            <tr>
                <td colspan="11" class="text-center text-muted">Heç bir sifariş mövcud deyil.</td>
            </tr>
        }
    </tbody>
    <a asp-action="Index" asp-controller="Home" class="btn btn-sm btn-danger">Geri</a>

</table>
