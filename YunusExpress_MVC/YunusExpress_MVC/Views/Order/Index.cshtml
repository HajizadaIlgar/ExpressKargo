@using YunusExpress_MVC.Models
@model List<Order>

@{
    ViewData["Title"] = "Sifariş Siyahısı";
}

<h2 class="text-center my-4" style="color: #333; font-weight: bold;">📦 Sifariş Siyahısı</h2>


<style>

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        font-weight: 500;
        margin-right:50px;
        transition: 0.3s ease;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
        color: white;
    }


    .custom-table-container {
        max-width: 95%;
        margin: auto;
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        padding: 20px;
    }

    .custom-table thead {
        background: linear-gradient(45deg, #007bff, #00c3ff);
        color: white;
    }

    .custom-table th, .custom-table td {
        vertical-align: middle !important;
        font-size: 14px;
    }

    .custom-table tbody tr:hover {
        background-color: #f1f9ff;
    }

    .back-button {
        margin: 20px auto;
        display: block;
        padding: 10px 20px;
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        color: white;
        border: none;
        border-radius: 25px;
        font-weight: bold;
        transition: background 0.3s ease;
        text-decoration: none;
        text-align: center;
    }

        .back-button:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            color: white;
            text-decoration: none;
        }

</style>


<!-- Bootstrap əlavə olunmayıbsa -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Form -->
<div class="container mt-3">
    <div class="d-flex justify-content-center">
        <form method="get" asp-controller="Order" asp-action="Index" class="d-flex align-items-center gap-2 p-3 rounded shadow-sm" style="background-color: #f9f9f9; border: 1px solid #ddd;">
            <label for="startDate" class="form-label mb-0 me-2 text-secondary">Tarix:</label>
            <input type="date" name="startDate" id="startDate" class="form-control form-control-sm" style="max-width: 180px;" required />
            <button type="submit" class="btn btn-sm btn-outline-success">
                <i class="bi bi-search"></i> Filtrlə
            </button>
        </form>
    </div>
</div>

<!-- Bootstrap icons (əgər istifadə edəcəksənsə) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<!-- Bootstrap əlavə olunmayıbsa -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="text-end mb-3">
    <!-- sağda yerləşməsi və alt boşluq üçün -->
    <a asp-action="Index" asp-controller="Order" class="btn btn-danger btn-sm px-4 shadow-sm">
        Bütün Sifarişlər
    </a>
</div>

<div class="custom-table-container">
    <table class="table table-bordered table-hover custom-table">
        <thead>
           
            <tr>
                <th>Sifariş No</th>
                <th>Faktura No</th>
                <th>Başlanğıc Tarixi</th>
                <th>Xidmət Növü</th>
                <th>Kuryer</th>
                <th>Göndərən</th>
                <th>Göndərən Ünvani</th>
                <th>Alıcı</th>
                <th>Alıcının Ünvanı</th>
                <th>Yekun</th>
                <th>Əməliyyatlar</th>
            </tr>

        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderNo</td>
                        <td>@order.InvoiceNo</td>
                        <td>@order.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@order.ServiceType?.ServiceType</td>
                        <td>@order.Courier?.CourierName</td>
                        <td>@order.SenderName</td>
                        <td>@order.SenderAddress</td>
                        <td>@order.ReceiverName</td>
                        <td>@order.ReceiverAddress</td>
                            @if (order.ServiceType!.ServiceType!.Equals("Express"))
                            {
                                <td>@(((order.OrderPrice - ((order.OrderPrice + order.SpecialPrice) * (order.Discount / 100))) + (order.OrderPrice - ((order.OrderPrice + order.SpecialPrice) * (order.Discount / 100))) * 18 / 100))₼</td>
                            }
                            else
                            {
                             <td>   @(((((order.OrderPrice) * 18) / 100) + order.OrderPrice) - ((order.OrderPrice) * order.Discount) / 100)₼</td>
                            }
                        <td>
                            <a asp-controller="Order" asp-action="Update" asp-route-id="@order.Id" class="btn btn-sm btn-outline-warning me-2">Düzəliş</a>
                            <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="11" class="text-center text-muted">Heç bir sifariş mövcud deyil.</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Home" class="back-button">🔙 Ana Səhifəyə Qayıt</a>
</div>


