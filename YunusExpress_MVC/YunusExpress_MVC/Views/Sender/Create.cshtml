@using YunusExpress_MVC.ViewModels
@model SenderCreateVm
@{
    ViewData["Title"] = "Create";
}

<h2>Create Sender</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SenderName"></label>
        <input asp-for="SenderName" class="form-control" />
        <span asp-validation-for="SenderName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SenderAddress"></label>
        <input asp-for="SenderAddress" class="form-control" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SenderPhoneNum"></label>
        <input asp-for="SenderPhoneNum" class="form-control" />
        <span asp-validation-for="SenderPhoneNum" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
</form>

